{% extends 'base.html.twig' %}

{% block title %}Project index{% endblock %}

{% block body %}
    <h1>Project index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Primary_techno</th>
                <th>Second_techno</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for project in projects %}
            <tr>
                <td>{{ project.id }}</td>
                <td>{{ project.name }}</td>
                <td>{{ project.primaryTechno }}</td>
                <td>{{ project.secondTechno }}</td>
                <td>{{ project.description }}</td>
                <td>
                    <a href="{{ path('Admin-Project-Show', {'id': project.id}) }}">show</a>
                    <a href="{{ path('Admin-Project-Edit', {'id': project.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('Admin-Project-New') }}">Create new</a>
{% endblock %}
