{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

{% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <section class="container" id="login">
        <h2>Connexion</h2>
        <form action="{{ path('Connexion') }}" method="post" class="col col-cols-lg-auto g-3 align-items-center">
            <fieldset class="col-mb-3">
                <label for="username" class="col-sm-2 col-form-label col-form-label-sm">Email:</label>
                <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control form-control-sm"/>
            </fieldset>
            <fieldset class="col-mb-3">
                <label for="password" class="col-sm-2 col-form-label col-form-label-sm">Password:</label>
                <input type="password" id="password" name="_password" class="form-control form-control-sm"/>
            </fieldset>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}
                <button type="submit" class="btn btn-primary">Se connecter</button>
        </form>
    </section>
{% endblock %}
